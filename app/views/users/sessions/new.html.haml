.signin
  %header.signin__header
    %h1.signin__header__logo
      = link_to root_path do
        = image_tag "logo.svg", class: "signin__header__logo__img"
  %main.signin__main
    .signin__main__container
      .signin__main__container__head
        %p.signin__main__container__head__text  アカウントをお持ちでない方はこちら 
        = link_to "新規会員登録", new_user_registration_path, class: "signin__main__container__head__btn"
      .signin__main__container__inner
        = link_to new_user_session_path, id: "facebook-login", class: "signin__main__container__inner__btn__facebook" do
          %i.fab.fa-facebook-square.fa-2x.signin__main__container__inner__btn__facebook__icon
          Facebookでログイン
        = link_to "Googleでログイン", new_user_session_path, id: "google-login", class: "signin__main__container__inner__btn__google"
      %form.signin__main__container__form
        .signin__main__container__form__content
          %div.signin__main__container__form__content__group
            %input.signin__main__container__form__content__group__input{"type":"email", "placeholder":"メールアドレス"}
          %div.signin__main__container__form__content__group
            %input.signin__main__container__form__content__group__input{"type":"password", "placeholder":"パスワード"}
          .signin__main__container__form__content__recaptha
            = image_tag "reCAPTHA.jpg", size: "309x83"
          = link_to "ログイン", new_user_session_path, class: "signin__main__container__form__content__btn"
          .signin__main__container__form__content__text-left
            パスワードをお忘れの方
  = render 'layouts/second_footer'
