.address
  %header.address__header
    %h1.address__header__left
      = link_to "/" , class: "address__header__left__logo" do
        = image_tag "logo.svg", class: "address__header__left__logo__img"
    %nav.address__header__progress-bar
      %ol.address__header__progress-bar__clearfix
        %li.address__header__progress-bar__text
          会員情報
          .address__header__progress-bar__status.active
        %li.address__header__progress-bar__text
          電話番号認証
          .address__header__progress-bar__status.active
        %li.address__header__progress-bar__text.active
          お届け先住所入力
          .address__header__progress-bar__status.active.last
        %li.address__header__progress-bar__text
          支払い方法
          .address__header__progress-bar__status
        %li.address__header__progress-bar__text
          完了
          .address__header__progress-bar__status
  %main.address__main
    %section.address__main__container
      %h2.address__main__container__head  住所入力
      %form.address__main__form
        %div.address__main__form__content
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label お名前
            %span.address__main__form__content__group__require 必須
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）山田"}
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）彩"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label お名前カナ
            %span.address__main__form__content__group__require 必須
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）ヤマダ"}
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）アヤ"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  郵便番号
            %span.address__main__form__content__group__require   必須
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）123-4567"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  都道府県
            %span.address__main__form__content__group__require   必須
            .address__main__form__content__group__prefecture__select
              %i.fas.fa-chevron-down.fa-lg.address__main__form__content__group__prefecture__select__icon
              %select.address__main__form__content__group__prefecture__select__pulldown
                %option{value:"北海道"} 北海道
                %option{value:"青森"} 青森
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  市区町村
            %span.address__main__form__content__group__require   必須
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）横浜市緑区"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  番地
            %span.address__main__form__content__group__require   必須
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）青山1-1-1"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  建物名
            %span.address__main__form__content__group__optional  任意
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）柳ビル103"}
          %div.address__main__form__content__group
            %label.address__main__form__content__group__label  電話
            %span.address__main__form__content__group__optional   任意
            %input.address__main__form__content__group__input{"type":"text", "placeholder":"例）09012345678"}
          = link_to "次へ進む", step4_signup_index_path, class: "address__main__form__content__btn"
  = render 'layouts/second_footer'
